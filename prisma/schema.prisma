generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String    @id @default(uuid())
  name        String
  surname     String
  email       String    @unique
  password    String
  profilePic  String    @default("https://cdn.iconscout.com/icon/free/png-256/avatar-380-456332.png")
  bio         String?
  role        String    @default("USER")
  ledGroups   Group[]   @relation("GroupLeader")
  groups      Group[]   @relation("GroupToUser")
}

model Group {
  id       String    @id @default(uuid())
  name     String
  leaders   User []   @relation("GroupLeader")
  members  User[]    @relation("GroupToUser")
}

